<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="controller.BookController"
      prefWidth="400" prefHeight="400">
    <Label text="Book Management" style="-fx-font-size: 16;" />
    <Button text="Add Book" onAction="#handleAddBook"/>
    <Button text="Update Book Details" onAction="#handleUpdateBook"/>
    <Button text="Update Availability" onAction="#handleUpdateAvailability"/>
    <Button text="View All Books" onAction="#handleViewBooks"/>
    <Button text="Back to Main" onAction="#handleBack"/>
</VBox>